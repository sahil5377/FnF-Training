using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    /// <summary>
    /// Genralized to add Extension Method to the Programs
    /// 
    /// </summary>
    static class MyExtensions
    {
        public static int GetNoOfWords(this string input)
        {
            var words = input.Split(' ');
            return words.Length;
        }
    }
   
    internal class NewFeatures
    {
        static void Main(string[] args)
        {
            //extensionMethod()
            AnonymousExample();
        }
        private static void AnonymousExample()
        {
            var emp = new
            {
                Empid = 123,
                Empname = "Sahil",
                Empaddress = "Nipani"
            };
            Console.WriteLine(emp);
            Console.WriteLine($"The name is{emp.Empname} from {emp.Empaddress} and is having an Id of {emp.Empid}");
        }
        private static void extensionMethod()
        {
            var data = "This is the string to check the extension method";
            var wordCont = data.GetNoOfWords();
            Console.WriteLine(wordCont);
        }
    } 
}
