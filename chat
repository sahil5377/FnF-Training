using InsuranceApi.DTOs;
using Microsoft.AspNetCore.Mvc;
using System.Net.Http;
using System.Net.Http.Json;

public class PlansController : Controller
{
    private readonly IHttpClientFactory _clientFactory;

    public PlansController(IHttpClientFactory clientFactory)
    {
        _clientFactory = clientFactory;
    }

    public async Task<IActionResult> ActivePlans()
    {
        var client = _clientFactory.CreateClient();
        client.BaseAddress = new Uri("http://localhost:5230/api/"); // Adjust the base address to your API URL

        var response = await client.GetAsync("InsuranceType"); // Adjust the endpoint to match your API

        if (response.IsSuccessStatusCode)
        {
            var insurancePlans = await response.Content.ReadFromJsonAsync<List<InsuranceTypeDto>>();
            return View(insurancePlans);
        }

        return View(new List<InsuranceTypeDto>()); // Return an empty list if the API call fails
    }
}
