using InsuranceApi.DTOs;
using System.Collections.Generic;
using System.Net.Http;
using System.Net.Http.Json;
using System.Threading.Tasks;

namespace WebApplication1.Services
{
    public class InsuranceService : IInsuranceService
    {
        private readonly HttpClient _httpClient;

        public InsuranceService(HttpClient httpClient)
        {
            _httpClient = httpClient;
        }

        public async Task<List<InsuranceTypeDto>> GetActivePlansAsync()
        {
            var response = await _httpClient.GetAsync("InsuranceTypes"); // Ensure your API endpoint matches
            if (response.IsSuccessStatusCode)
            {
                var plans = await response.Content.ReadFromJsonAsync<List<InsuranceTypeDto>>();
                return plans ?? new List<InsuranceTypeDto>();
            }
            return new List<InsuranceTypeDto>();
        }
    }
}
