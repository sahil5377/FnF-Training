// Add this method in the existing HospitalController class

[HttpGet("count")]
public async Task<IActionResult> GetHospitalCount()
{
    try
    {
        int count = await context.Hospitals.CountAsync();
        return Ok(count);
    }
    catch (Exception ex)
    {
        return StatusCode(StatusCodes.Status500InternalServerError, ex.Message);
    }
}
