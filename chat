[HttpGet("new")]
public async Task<IActionResult> GetNewClaims()
{
    var newClaims = await service.GetNewClaims();
    return Ok(newClaims);
}

// In ClaimService.cs:
public async Task<List<ClaimDto>> GetNewClaims()
{
    var newClaims = await context.Claims
                                  .Where(c => c.ClaimStatus == "New")
                                  .AsNoTracking()
                                  .ToListAsync();
    return newClaims.Select(claim => ConvertToDto(claim)).ToList();
}
