<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Policy and Claim data retrieved from TempData and passed as JSON
        const policyData = @Html.Raw(JsonSerializer.Serialize(policyData));
        const claimData = @Html.Raw(JsonSerializer.Serialize(claimData));

        // Convert object data to arrays for Chart.js
        const policyDates = Object.keys(policyData);
        const policyCounts = Object.values(policyData);

        const claimDates = Object.keys(claimData);
        const claimCounts = Object.values(claimData);

        // Policies Line Chart
        var ctx = document.getElementById('policiesChart').getContext('2d');
        var policiesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: policyDates,
                datasets: [{
                    label: 'Number of Policies',
                    data: policyCounts,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                animation: {
                    duration: 1500
                },
                scales: {
                    y: {
                        beginAtZero: true
                    },
                    x: {
                        type: 'time',
                        time: {
                            unit: 'day',
                            tooltipFormat: 'MMM DD'
                        }
                    }
                }
            }
        });

        // Claims Bar Chart
        var ctx2 = document.getElementById('claimsChart').getContext('2d');
        var claimsChart = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: claimDates,
                datasets: [{
                    label: 'Number of Claims',
                    data: claimCounts,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                animation: {
                    duration: 1500
                },
                scales: {
                    y: {
                        beginAtZero: true
                    },
                    x: {
                        type: 'time',
                        time: {
                            unit: 'day',
                            tooltipFormat: 'MMM DD'
                        }
                    }
                }
            }
        });
    });
</script>
