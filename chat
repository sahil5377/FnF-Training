@using System.Text.Json
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";

    // Retrieve counts from TempData
    var policyRequestCount = TempData.Peek("PolicyRequestCount") ?? "0";
    var claimCount = TempData.Peek("ClaimCount") ?? "0"; 
    var customerCount = TempData.Peek("CustomerCount") ?? "0";
    var hospitalCount = TempData.Peek("HospitalCount") ?? "0";

    // Retrieve chart data from TempData
    var policyData = TempData["PolicyData"] as Dictionary<string, int> ?? new Dictionary<string, int>();
    var claimData = TempData["ClaimData"] as Dictionary<string, int> ?? new Dictionary<string, int>();

    // Serialize data to JSON
    var policyDataJson = JsonSerializer.Serialize(policyData);
    var claimDataJson = JsonSerializer.Serialize(claimData);
}

<div class="container-fluid">
