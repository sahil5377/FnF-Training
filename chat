@model List<InsuranceApi.DTOs.PolicyHolderDto>

@{
    ViewData["Title"] = "Manage Customers";
}

<h2>Manage Customers</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Policy Holder ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var policyHolder in Model)
        {
            <tr>
                <td>@policyHolder.PolicyHolderId</td>
                <td>@policyHolder.Name</td>
                <td>@policyHolder.Address</td>
                <td>@policyHolder.Phone</td>
                <td>@policyHolder.Email</td>
                <td>
                    @if (policyHolder.Status == 0)
                    {
                        <span>Blacklisted</span>
                    }
                    else
                    {
                        <span>Active</span>
                    }
                </td>
                <td>
                    @if (policyHolder.Status == 0)
                    {
                        <button class="btn btn-success" onclick="changeStatus(@policyHolder.PolicyHolderId, 1)">
                            Unblock
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-danger" onclick="changeStatus(@policyHolder.PolicyHolderId, 0)">
                            Block
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    async function changeStatus(id, status) {
        const response = await fetch(`/Customer/UpdateStatus/${id}/${status}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        if (response.ok) {
            location.reload(); // Reload the page to reflect changes
        } else {
            alert('Failed to update status');
        }
    }
</script>
