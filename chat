// Controller Method
[HttpGet("InsuredPolicy/Count")]
public async Task<IActionResult> GetInsuredPoliciesCount()
{
    var count = await _policyRequestService.GetTotalPoliciesCountAsync();
    return Ok(count);
}

// Service Method
public async Task<int> GetTotalPoliciesCountAsync()
{
    var response = await _httpClient.GetAsync("InsuredPolicy/Count");
    response.EnsureSuccessStatusCode();
    return await response.Content.ReadFromJsonAsync<int>();
}
