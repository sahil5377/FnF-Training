public class ClaimController : Controller
{
    private readonly IClaimService _claimService;

    public ClaimController(IClaimService claimService)
    {
        _claimService = claimService;
    }

    public async Task<IActionResult> AllClaims()
    {
        var claims = await _claimService.GetAllClaimsAsync();
        return View(claims); // Create a new view for AllClaims or reuse the ManageClaims view
    }

    public async Task<IActionResult> NewClaimRequests()
    {
        var newClaims = await _claimService.GetNewClaimsAsync();
        return View("ManageClaims", newClaims); // Reuse the ManageClaims view for new claims
    }

    [HttpPost]
    public async Task<IActionResult> UpdateClaimStatus(int claimId, string status, decimal dispenseAmount)
    {
        await _claimService.UpdateClaimStatusAsync(claimId, status, dispenseAmount);
        return RedirectToAction("AllClaims");
    }
}
