[Route("api/[controller]")]
[ApiController]
public class HospitalController : ControllerBase, IHospitalController
{
    private readonly FnfProjectContext _context;

    public HospitalController(FnfProjectContext context)
    {
        _context = context;
    }

    [HttpGet("count")]
    public async Task<IActionResult> GetHospitalCount()
    {
        var count = await _context.Hospitals.CountAsync();
        return Ok(count);
    }

    // Other actions (Add, Delete, GetAll, GetById, Update) as before
}
