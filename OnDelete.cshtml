@model WebApplication1.Models.Stock

@{
    ViewBag.Title = "Delete Stock";
}

<h2>Delete Stock</h2>
<hr />
<p>Are you sure you want to delete this stock?</p>

<div>
    <h4>Stock</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StockId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StockId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StockName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StockName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StockDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StockDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
    </dl>

    @using (Html.BeginForm("ConfirmDelete", "StocksManager", FormMethod.Post))
    {
        @Html.Hidden("stockId", Model.StockId)
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
    }
</div>
