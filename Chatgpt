@page "/allEmployees"
@inject IEmpService service
@using CrudEmployeeApp.Models

<div>
    <h1>List of All Employees</h1>
    <hr />
    @if (empList == null)
    {
        <text>Loading...</text>
    }
    else if (empList.Count == 0)
    {
        <text>No Employee Records found!</text>
    }
    else
    {
        <input type="search" class="form-control" placeholder="Search By Name" @bind="searchName" />
        <button type="submit" class="btn btn-primary" @onclick="SearchByName">Search</button>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Employee Id</td>
                    <td>Employee Name</td>
                    <td>Employee Address</td>
                    <td>Employee Salary</td>
                    <td>Options</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in empList)
                {
                    <tr>
                        <td>@emp.EmpId</td>
                        <td>@emp.EmpName</td>
                        <td>@emp.EmpAddress</td>
                        <td>@emp.EmpSalary</td>
                        <td>
                            <a class="btn btn-primary" href="Details/@emp.EmpId">Edit</a>
                            <button class="btn btn-danger" @onclick="() => OnDelete(emp.EmpId)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<Employee> empList = null;
    public string searchName { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
    }

    private async Task LoadEmployees()
    {
        empList = await service.GetAll();
    }

    private async Task SearchByName()
    {
        empList = await service.GetByName(searchName);
    }

    private async Task OnDelete(int id)
    {
        var response = await service.DeleteEmployee(id);
        if (response.IsSuccessStatusCode)
        {
            await LoadEmployees(); // Refresh the list after deletion
        }
        else
        {
            await js.InvokeVoidAsync("alert", "Failed to delete employee.");
        }
    }
}
